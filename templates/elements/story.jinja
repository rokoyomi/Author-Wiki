{% block content %}
    <div class="content-area">
        <h1 class="heading">Arcs</h1>
        {% for arc in arcs %}
            <a href="{{ url_for('arc', story_id=arc['story_id'], id=arc['id']) }}" class="heading-2">{{ arc['name'] }}</a>
        <p class="text">{{ arc['description'] }}</p>
        {% endfor %}
        <form class="list" method="post" action="{{ url_for('story', id=element['id']) }}">
            <input type="hidden" name="csrf_token" value = "{{ csrf_token() }}" />
            <input type="submit" class="item" value="+ Add Arc">
        </form>
    </div>

    <div class="content-area">
        <h1 class="heading">Characters</h1>
        <div>
            {% for appearance in appearances %}
                <a href="{{ url_for('characters', id=appearance['character_id']) }}" class="heading-2">{{ appearance['name'] }}</a>
                <span class="text">{{ appearance['role'] }}</span>
                <p class="text">{{ appearance['role_description'] }}</p>
            {% endfor %}
        </div>
    </div>
{% endblock content %}

