{% extends "forms/form.jinja" %}

{% block child_controls %}
    <label>
        <span>Item</span>
        <select name="item_id" class="form-input">
            {% for item in item_list %}
                <option value="{{ item['id'] }}" {% if existing and existing['item_id'] and existing['item_id']|int == item['id'] %}selected="selected"{% endif %}>
                    {{ item['name'] }}
                </option>
            {% endfor %}
        </select>
    </label>
    <label>
        <span>Arc</span>
        <select name="arc_id" class="form-input">
            {% for arc in arc_list %}
                <option value="{{ arc['id'] }}" {% if existing and existing['arc_id'] and existing['arc_id']|int == arc['id'] %}selected="selected"{% endif %}>
                    {{ arc['name'] }}
                </option>
            {% endfor %}
        </select>
    </label>
{% endblock child_controls %}