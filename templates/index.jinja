{% block content %}
    <div class="content-area">
        <h1 class="heading">Characters</h1>
        <p class="text">All your characters are shown here</p>
        <div class="list">
            {% for character in characters_list %}
            <a href="{{ url_for('character', id=character['id']) }}" class="item">{{ character['name'] }}</a>
            {% endfor %}
            <a href="{{ url_for('form', table_name='characters') }}" class="item">+</a>
        </div>
    </div>

    <div class="content-area">
        <h1 class="heading">Stories</h1>
        <p class="text">All your stories are shown here</p>
        <div class="list">
            {% for story in stories %}
